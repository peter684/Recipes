<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:clickable="true"
    android:onClick="onClickBackground"

    tools:context=".MainActivity"
    tools:layout_width="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="@string/enter_username"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/passWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_password"
            android:inputType="textPassword" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:clickable="true"
            android:onClick="onClickBackground"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnLoginSignup"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:onClick="btnLoginSignup"
                android:text="@string/login" />

            <TextView
                android:id="@+id/txtSignupLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="changeBtn"
                android:text="@string/signup_instead"
                tools:text="@string/signup_instead" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
